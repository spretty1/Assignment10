
@model Assignment10.Models.ViewModels.IndexViewModel

<!--loops through to display each bowler and their info-->
@foreach (var x in Model.Bowlers)
{
    <div class="card card-outline-primary m-1 p-1">
        <h6 class="font-weight-bold ">@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</h6>
        <p class="font-weight-lighter">@x.BowlerAddress @x.BowlerCity, @x.BowlerState @x.BowlerZip</p>
        <p class="font-italic">@x.BowlerPhoneNumber</p>
    </div>
}

<!--sets up the pagination to display-->
<div page-info="@Model.PageNumberingInfo" page-url-team="@Model.BowlingTeam" page-action="Index" page-classes-enabled="true" 
     page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"
     ToolTip="Click me to go to this page">

</div>